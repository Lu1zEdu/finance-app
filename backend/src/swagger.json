        "/accounts": {
            "get": {
                "tags": [
                    "Contas"
                ],
                "summary": "Listar Contas",
                "parameters": [
                    {
                        "in": "query",
                        "name": "userId",
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "in": "query",
                        "name": "showArchived",
                        "schema": {
                            "type": "boolean"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Lista de contas"
                    }
                }
            },
            "post": {
                "tags": [
                    "Contas"
                ],
                "summary": "Criar Conta",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string",
                                        "enum": [
                                            "CHECKING",
                                            "CASH",
                                            "INVESTMENT"
                                        ]
                                    },
                                    "userId": {
                                        "type": "string"
                                    },
                                    "balance": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Criada"
                    }
                }
            }
        },
        "/accounts/{id}": {
            "put": {
                "tags": [
                    "Contas"
                ],
                "summary": "Atualizar Conta",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "name": {
                                        "type": "string"
                                    },
                                    "type": {
                                        "type": "string"
                                    },
                                    "balance": {
                                        "type": "number"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Atualizada"
                    }
