            },
            "delete": {
                "tags": [
                    "Contas"
                ],
                "summary": "Deletar Conta (Permanente)",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Deletada"
                    }
                }
            }
        },
        "/accounts/{id}/archive": {
            "patch": {
                "tags": [
                    "Contas"
                ],
                "summary": "Arquivar Conta (Soft Delete)",
                "parameters": [
                    {
                        "in": "path",
                        "name": "id",
