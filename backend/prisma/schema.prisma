generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id           String        @id @default(uuid())
  name         String
  type         String        @default("CHECKING") // CHECKING, CASH, INVESTMENT
  balance      Decimal       @default(0.0) @db.Decimal(10, 2)
  transactions Transaction[]
  createdAt    DateTime      @default(now())
}

model Category {
  id           String        @id @default(uuid())
  name         String        // Ex: "Mercado", "Cliente X"
  type         String        // INCOME ou EXPENSE
  transactions Transaction[] // Uma categoria tem várias transações
  createdAt    DateTime      @default(now())
}

model Transaction {
  id          String   @id @default(uuid())
  description String
  amount      Decimal  @db.Decimal(10, 2)
  type        String   // INCOME, EXPENSE
  date        DateTime
  
  // Relação com Conta (Obrigatória para mover saldo)
  account     Account @relation(fields: [accountId], references: [id])
  accountId   String

  // Relação com Categoria (Opcional no início, mas recomendada)
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?
  
  // Campos fiscais
  isTaxable   Boolean  @default(false)
  taxRate     Decimal? @db.Decimal(5, 4)
  
  createdAt   DateTime @default(now())
}