generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id           String        @id @default(uuid())
  name         String
  type         String        @default("CHECKING") // CHECKING, CASH, INVESTMENT
  balance      Decimal       @default(0.0) @db.Decimal(10, 2) // Usar Decimal para dinheiro!
  transactions Transaction[]
  createdAt    DateTime      @default(now())
}

model Transaction {
  id          String   @id @default(uuid())
  description String
  amount      Decimal  @db.Decimal(10, 2)
  type        String   // INCOME, EXPENSE
  date        DateTime
  
  // Relações
  account     Account? @relation(fields: [accountId], references: [id])
  accountId   String?
  
  // Campos fiscais
  isTaxable   Boolean  @default(false)
  taxRate     Decimal? @db.Decimal(5, 4) // Ex: 0.1550
  
  createdAt   DateTime @default(now())
}